<Window x:Class="PoligrafObPostnova.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PoligrafObPostnova"
        mc:Ignorable="d"
            Title="Аренда полиграфического оборудования" 
    Height="400" Width="450"
    WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель навигации -->
        <StackPanel  Background="#f0f0f0">
            <TextBlock Text="Меню" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>


            <Button x:Name="RentalBtn" Content="Аренда" 
                Click="RentalBtn_Click"
                Margin="0,5" Padding="10,5" Background="LightGreen"/>

            <Button x:Name="ClientBtn" Content="Клиенты" 
                Click="ClientsBtn_Click"
                Margin="0,5" Padding="10,5" Background="LightYellow"/>

            <Button x:Name="JournalBtn" Content="Журнал" 
    Click="JournalBtn_Click"
    Margin="0,5" Padding="10,5" Background="LightCoral"/>
        </StackPanel>

        <!-- Основная область контента -->
        <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
