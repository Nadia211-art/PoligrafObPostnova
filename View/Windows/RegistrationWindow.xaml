<Window x:Class="PoligrafObPostnova.View.Windows.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PoligrafObPostnova.View.Windows"
        mc:Ignorable="d"
                  Title="Регистрация" Height="350" Width="450">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="30" />
            <RowDefinition Height="20" />
            <RowDefinition Height="30" />
            <RowDefinition Height="20" />
            <RowDefinition Height="30" />
            <RowDefinition Height="20" />
            <RowDefinition Height="30" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="1" Grid.Column="1"  Text="Email" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBox Name="LoginTb" Grid.Row="1" Grid.Column="2"/>
        <TextBlock Grid.Row="3" Grid.Column="1"  Text="Пароль" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <PasswordBox Name="PasswordPb" Grid.Row="3" Grid.Column="2"/>
        <TextBlock Grid.Row="5" Grid.Column="1"  Text="Повторите пароль" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <PasswordBox Name="RepeatPasswordPb" Grid.Row="5" Grid.Column="2"/>
        <Button Name="RegistrationBtn" Content="Зарегистрироваться" Grid.Row="7" Grid.Column="2" Width="120" HorizontalAlignment="Right" Click="RegistrationBtn_Click"/>
    </Grid>
</Window>
