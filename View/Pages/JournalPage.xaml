<Page x:Class="PoligrafObPostnova.View.Pages.JournalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PoligrafObPostnova.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="250"
      Title="JournalPage">

    <Grid>
        <ListView Name="JournalLv">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Клиент" DisplayMemberBinding="{Binding User.Fullname}"/>
                    <GridViewColumn Header="Оборудование" DisplayMemberBinding="{Binding Equipment.Name}"/>
                    <GridViewColumn Header="Дата начала" DisplayMemberBinding="{Binding StartDate, StringFormat=dd.MM.yyyy}"/>
                    <GridViewColumn Header="Дата окончания" DisplayMemberBinding="{Binding EndDate, StringFormat=dd.MM.yyyy}"/>
                    <GridViewColumn Header="Стоимость" DisplayMemberBinding="{Binding Cost}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
