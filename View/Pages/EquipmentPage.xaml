<Page x:Class="PoligrafObPostnova.View.Pages.EquipmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PoligrafObPostnova.View.Pages"
      mc:Ignorable="d" 
        d:DesignHeight="350" d:DesignWidth="250"
  Title="Оборудование">

    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Выбор оборудования" 
               FontWeight="Bold" FontSize="16" 
               Margin="0,0,0,10"/>

            <TextBlock Text="Тип оборудования:" Margin="0,5"/>
            <ComboBox Name="EquipmentTypeCmb" Height="25" Margin="0,5"/>

            <TextBlock Text="Модель:" Margin="0,10,0,5"/>
            <ComboBox x:Name="ModelCmb" Height="25" Margin="0,5"/>


            <Button Name="AddOrderBtn" Content="Добавить в заказ" 
            Height="30" Margin="0,20" Click="AddOrderBtn_Click"
            />
        </StackPanel>
    </Grid>
</Page>
