<Page x:Class="PoligrafObPostnova.View.Pages.ClientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PoligrafObPostnova.View.Pages"
      mc:Ignorable="d" 
        d:DesignHeight="350" d:DesignWidth="250"
  Title="Клиенты">

    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Управление клиентами" 
               FontWeight="Bold" FontSize="16" 
               Margin="0,0,0,5"/>

            <TextBlock Text="ФИО/Название:" Margin="0,5"/>
            <TextBox Name="ClientNameTb" Height="25" Margin="0,5"/>

            <TextBlock Text="Телефон:" Margin="0,10,0,5"/>
            <TextBox Name="PhoneTb" Height="25" Margin="0,5"/>

            <TextBlock Text="Email:" Margin="0,10,0,5"/>
            <TextBox Name="EmailTb" Height="25" Margin="0,5"/>

            <TextBlock Text="Тип клиента:" Margin="0,10,0,5"/>
            <ComboBox Name="ClientTypeCmb" Height="25" Margin="0,3"/>

            <Button Name="AddClientBtn" Content="Добавить клиента" 
            Height="30" Margin="0,20" 
            Click="AddClientBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
